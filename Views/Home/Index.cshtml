@using Microsoft.AspNetCore.Identity
@using UAParser; 
@model IEnumerable<JokesApp.Models.Joke>
@inject SignInManager<IdentityUser> SignInManager
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Jokes Application!";

    string cardImage = "https://media.tarkett-image.com/large/TH_24567080_24594080_24596080_24601080_24563080_24565080_24588080_001.jpg";
}

<style>
    .carousel-item {
        max-height: 300px;
    }
</style>
<div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-inner">
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="carousel-item active">
                <img src="//images.unsplash.com/photo-1488866022504-f2584929ca5f?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1162&q=80" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Welcome, @User.Identity.Name</h5>
                </div>
            </div>
        }
        @if (!SignInManager.IsSignedIn(User))
        {
            <div class="carousel-item active">
                <img src="//images.pexels.com/photos/847402/pexels-photo-847402.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Welcome, Log In <a asp-area="Identity" asp-page="/Account/Login" style="color:black;">Here</a></h5>
                </div>
            </div>
        }
        <div class="carousel-item">
            <img src="https://www.calmsage.com/wp-content/uploads/2020/04/A-glance-of-the-sea.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="//cdn.dribbble.com/users/1968084/screenshots/6352793/spacebg_dribbble-01_4x.png?compress=1&resize=1600x1200" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


<!-- Grid -->
<div class="row">
    <div class="col-md-4 col-sm-12">
        <div class="card" style="width: 100%;">
            <img src="@cardImage" class="card-img-top" alt="...">
            <div class="card-body">
                <p class="card-text">
                    You are operating on <strong>@Joke.CheckOperatingSystem()</strong>
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm-12">
        <div class="card" style="width: 100%;">
            <img src="@cardImage" class="card-img-top" alt="...">
            <div class="card-body">
                <p class="card-text">Page loaded at <strong>@Joke.CheckCurrentTime()</strong></p>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm-12">
        <div class="card" style="width: 100%;">
            <img src="@cardImage" class="card-img-top" alt="...">
            <div class="card-body">
                <p class="card-text">You are using <strong></strong> browser</p>
            </div>
        </div>
    </div>
</div>